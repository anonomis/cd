*
  -webkit-transform-origin 50% 50%

p
  margin 0

.ctx
  position relative
  width 100%
  height 100%

plastic = rgba(200,200,200,0.5)
cdCoverHeight = 124px
cdCoverWidth = 143px

plastic-glare(color)
  -webkit-box-shadow: inset 1px 1px 1px 1px color;
  -moz-box-shadow: inset 1px 1px 1px 1px color;
  box-shadow: inset 1px 1px 1px 1px color;

body
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.positioner
  position absolute

.cd
  .disc
    position: absolute;
    top: 1%;
    left: 1%;
    right: 1%;
    bottom: 1%;
    border-radius 50%
    box-shadow: inset 0px 0px 0px 50px rgba(199,199,199,1);
  .disc-edge-dark
    position: absolute;
    top: 0%;
    left: 0%;
    right: 0%;
    bottom: 0%;
    border-radius 50%
    box-shadow: inset 1px -1px 0px 0px rgba(0,0,0,0.50);
  .disc-edge-light
    position: absolute;
    top: 0%;
    left: 0%;
    right: 0%;
    bottom: 0%;
    border-radius 50%
    box-shadow: inset -1px 1px 0px 0px rgba(255,255,255,0.50);
  .disc-center-dark
    position: absolute;
    top: 43%;
    left: 43%;
    right: 43%;
    bottom: 43%;
    border-radius: 50%;
    box-shadow: inset 0px 0px 1px 1px rgba(109, 109, 109, 0.50);
  .disc-center-light
    position: absolute;
    top: 43%;
    left: 42%;
    right: 43%;
    bottom: 42%;
    border-radius: 50%;
    box-shadow: inset 1px -1px 1px 0px rgba(255,255,255,0.50);
  .disc-ring
    position: absolute;
    top: 36%;
    left: 36%;
    right: 36%;
    bottom: 36%;
    border-radius: 50%;
    box-shadow: inset 0px 0px 2px 0px rgba(114,114,114,0.93);
  .disc-ring-light
    position: absolute;
    top: 36%;
    left: 35%;
    right: 36%;
    bottom: 35%;
    border-radius: 50%;
    box-shadow: 1px -1px 1px 0px rgba(255,255,255,0.50);
  .artist
    position: absolute;
    top: 20px;
    font-family: monospace;
    font-size: 8px;
    left: 22px;
    right: 22px;
    overflow: hidden;
    bottom: 71px;
    text-align: center;
  .album
    position: absolute;
    top: 76px;
    font-family: monospace;
    font-size: 8px;
    left: 22px;
    right: 22px;
    overflow: hidden;
    bottom: 15px;
    text-align: center;
  .info-right
    position: absolute;
    top: 43px;
    font-family: monospace;
    font-size: 3px;
    left: 82px;
    right: 5px;
    overflow: hidden;
    bottom: 46px;
    text-align: left;
  .info-left
    position: absolute;
    top: 63px;
    font-family: Arial;
    font-size: 3px;
    left: 5px;
    right: 82px;
    line-height 1px
    overflow: hidden;
    bottom: 46px;
    text-align: right;
  .glare
    width 100%
    height 100%
    border-radius: 50%;
    overflow hidden

.case
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  .lid
    width 100%
    height 100%
    -webkit-transform-origin: 5% 50%;
    transform: rotateY(0deg);
    transition: all 1s ease-in-out;
    z-index 1
    .cover
      position absolute
      top 2.4194%
      left 12.4985%
      right 2.4194%
      bottom 2.4194%
      .booklet
        position absolute
        top 0%
        left 0%
        right 0%
        bottom 0%
      .holders
        .holder
          position: absolute;
          -webkit-box-shadow: inset 0 0 3px rgba(200,200,200,1);
        .holder:nth-child(1)
          top: 0%;
          left: 8%;
          right: 83%;
          bottom: 96%;
          border-bottom-left-radius: 10px;
          border-bottom-right-radius: 10px;
        .holder:nth-child(2)
          top: 0%;
          left: 79%;
          right: 12%;
          bottom: 96%;
          border-bottom-left-radius: 10px;
          border-bottom-right-radius: 10px;
        .holder:nth-child(3)
          bottom: 0%;
          left: 79%;
          right: 12%;
          top: 96%;
          border-top-left-radius: 10px;
          border-top-right-radius: 10px;
        .holder:nth-child(4)
          bottom: 0%;
          left: 8%;
          right: 83%;
          top: 96%;
          border-top-left-radius: 10px;
          border-top-right-radius: 10px;
    .pressed
      position absolute
      top 0%
      left 0%
      right 0%
      bottom 0%
      .top
        position absolute
        top 0%
        bottom 97.5806%
        left 0%
        right 0%
        plastic-glare(rgba(153,153,153,1))
        background-repeat repeat-x
        background-size 1px 100%
      .bottom
        position absolute
        top 97.5806%
        bottom 0%
        left 0%
        right 0%
        plastic-glare(rgba(153,153,153,1))
        background-repeat repeat-x
        background-size 1px 100%
      .right
        position absolute
        top 0%
        bottom 0%
        left 97.5806%
        right 0%
        plastic-glare(rgba(153,153,153,1))
      .overlay
        position absolute
        top 2.4194%
        left 10.4985%
        right 2.4194%
        bottom 2.4194%
        -webkit-box-shadow: inset 0px 0px 20px 0px rgba(255,255,255,0.5);
        -moz-box-shadow: inset 0px 0px 20px 0px rgba(255,255,255,0.5);
        box-shadow: inset 0px 0px 20px 0px rgba(255,255,255,0.5);
        .glare
          width 100%
          height 100%
  .bar
    position absolute
    top 2.4194%
    left 0%
    right 90.9091%
    bottom 2.4194%
    background-color #333
    overflow hidden
    .ridge:nth-child(even)
      margin-left 1px
      margin-right 1px
      height 100%
      width 1px
      background-color #111
      float left
    .ridge:nth-child(odd)
      height 100%
      width 1px
      background-color #222
      float left
  .tray
    position absolute
    top 2.4194%
    left 9.0909%
    right 2.4194%
    bottom 2.4194%
    background-color #333
    overflow hidden
    .holder-hole
      position: absolute;
      -webkit-box-shadow: inset 0 0 3px #000;
    .holder-hole:nth-child(1)
      top: 0%;
      left: 11%;
      right: 79%;
      bottom: 95%;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    .holder-hole:nth-child(2)
      top: 0%;
      left: 79%;
      right: 11%;
      bottom: 95%;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    .holder-hole:nth-child(3)
      bottom: 0%;
      left: 79%;
      right: 11%;
      top: 95%;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    .holder-hole:nth-child(4)
      bottom: 0%;
      left: 11%;
      right: 79%;
      top: 95%;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    .template
      position: absolute;
      top: -2%;
      left: 1%;
      right: 1%;
      bottom: -2%;
      border-radius 50%
      -webkit-box-shadow: inset 0 0 20px #000000;
    .nob
      position: absolute;
      top: 40%;
      left: 40%;
      right: 39%;
      bottom: 40%;
      border-radius 50%
      -webkit-box-shadow: 0 0 20px #000000;
      p
        font-size 250%
        margin: 0;
        color: #aaa;
        margin-left: 23%;
        line-height: 37px;
      .hole
        position absolute
        top 46%
        left 20%
        right 20%
        bottom 46%
        background-color: #aaa
        border-radius 2px
        transform-origin 50% 50%;
      .hole:nth-child(2)
        -webkit-transform: rotate(45deg);
      .hole:nth-child(3)
        -webkit-transform: rotate(90deg);
      .hole:nth-child(4)
        -webkit-transform: rotate(135deg);
      .hole:nth-child(5)
        -webkit-transform: rotate(180deg);
      .hole:nth-child(6)
        -webkit-transform: rotate(225deg);
      .hole:nth-child(7)
        -webkit-transform: rotate(270deg);
      .hole:nth-child(8)
        -webkit-transform: rotate(315deg);
  .back
    position absolute
    top 0%
    left 0%
    right 0%
    bottom 0%
    .top
      position absolute
      top 0%
      bottom 97.5806%
      left 10.4985%
      right 0%
      plastic-glare(rgba(153,153,153,1))
    .bottom
      position absolute
      top 97.5806%
      bottom 0%
      left 10.4985%
      right 0%
      plastic-glare(rgba(153,153,153,1))
    .right
      position absolute
      top 0%
      bottom 0%
      left 97.5806%
      right 0%
      plastic-glare(rgba(153,153,153,1))